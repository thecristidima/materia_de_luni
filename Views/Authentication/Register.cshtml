@model CrossRef.Services.Register.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-5">
        @if (!ViewContext.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <div asp-validation-summary="All"></div>
            </div>
        }
        <form asp-action="Register" asp-controller="Authentication" method="post">
            <div class="form-group">
                <label for="firstName">@Html.DisplayNameFor(m => m.FirstName)</label>
                <input type="text" class="form-control" placeholder="@Html.DisplayNameFor(m => m.FirstName)"
                       id="firstName" name="firstName" asp-for="FirstName"/>
            </div>
            <div class="form-group">
                <label for="lastName">@Html.DisplayNameFor(m => m.LastName)</label>
                <input type="text" class="form-control" placeholder="@Html.DisplayNameFor(m => m.LastName)"
                       id="lastName" name="lastName" asp-for="LastName"/>
            </div>
            <div class="form-group">
                <label for="username">@Html.DisplayNameFor(m => m.Email)</label>
                <input type="text" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)"
                       id="username" name="email" asp-for="Email"/>
            </div>
            <div class="form-group">
                <label for="password">@Html.DisplayNameFor(m => m.Password)</label>
                <input type="password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)"
                       id="password" name="password" asp-for="Password"/>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </form>
    </div>
</div>