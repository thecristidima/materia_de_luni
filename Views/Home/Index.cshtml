@model CrossRef.Models.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

</div>

<div class="search-bar-container">
    <form asp-controller="Home" asp-action="Search" method="post">
        <div class="form-group">
            <input type="search" class="form-control" placeholder="Type researcher's full name" asp-for="ResearcherName"/>
        </div>
        <button class="search-btn btn btn-primary btn-lg" type="submit">Search</button>
    </form>
</div>